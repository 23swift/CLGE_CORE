
@{
   
    var action = ViewContext.RouteData.Values["Action"];
    var controller = ViewContext.RouteData.Values["Controller"];
    var Id = ViewContext.RouteData.Values["Id"];
    var clientId = ViewContext.RouteData.Values["clientId"];
    var tabId=ViewBag.tabId;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>IdentityServer4</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="stylesheet" href="~/css/bootstrap.css" />
     <!-- <link rel="stylesheet" href="~/css/materia/bootstrap.css" /> -->
    <link rel="stylesheet" href="~/css/font-awesome.min.css" />
    
    <link rel="stylesheet" href="~/css/site.css" />
     <script src="~/lib/jquery/dist/jquery.js"></script>
</head>
<body>
  
    @using IdentityServer4.Extensions
@{
    string name = null;
    if (!true.Equals(ViewData["signed-out"]))
    {
        name = Context.User?.GetDisplayName();
    }
}
    @if(User.IsAuthenticated()){
        <nav class="navbar navbar-expand-lg">
        
           
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                   
                    <span class="navbar-toggler-icon">

                        <i class="fas fa-bars"></i>

                    </span>
                </button>
 <div class="navbar-brand" style="padding=0" >
 
                    

                        <img class="icon-banner" src="~/images/bdoLogo.png" alt="BDO">
                       
                    
                   
                    
           
 </div>
    <div class="float-right">
        <h1>CLG</h1><h4 >Exchange <span ><strong>1.0.0</strong></span></h4>
                            
    </div>
 
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav  float-right">
                    <li class="nav-item active">
                        <a href="~/"  class="nav-link"> <i class="fas fa-home fa-4x"></i> Home </a>
                    </li>
                    <li class="nav-item">
                    <a asp-action="Index" asp-controller="User"  class="nav-link"> <i class="fas fa-users-cog fa-4x text-warning"></i> Users </a>
                    </li>
                    <li class="nav-item">
                    <a asp-controller="System" asp-action="Index"  class="nav-link"> <i class="fas fa-sitemap fa-4x"></i> Systems </a>
                    </li>
                        <li class="nav-item">
                    <a asp-controller="Home" asp-action="Logout" class="nav-link"> <i class="fas fa-sign-out-alt fa-4x"></i> Logout </a>
                    </li>
                        
                    </ul>
                    
                </div>
        </nav>
    }
 

<ol class="breadcrumb">
          <li class="breadcrumb-item"><a asp-controller="@controller" asp-action="Index" asp-route-clientId="@clientId">@controller</a></li>
          <li class="breadcrumb-item"><a asp-controller="@controller" asp-action="@action" asp-route-clientId="@clientId">@action</a></li>
          <li class='breadcrumb-item active @(Id==null? "d-none":string.Empty)'>Data</li>
        </ol>


    <div class="container-fluid">
        @RenderBody()
    </div>

   
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script>
        $(document).ready(function() {
            $('.input-validation-error').parents('.form-group').addClass('has-danger');
            $('.input-validation-error').addClass('text-danger is-invalid');
            

        });
    </script>
    @RenderSection("scripts", required: false)
    
</body>
</html>
