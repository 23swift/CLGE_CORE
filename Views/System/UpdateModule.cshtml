 @{
     Layout = "_SystemTabedLayout";
 }
 @model CLGE_CORE.Models.ModuleViewModel
 <h2>New Module</h2>

 <div id="" class="row">
     <div id="" class="col-md-4">

 <form asp-action="UpdateModule" method="post" asp-route-clientId="@ViewBag.ClientId">
            <!-- <input type="hidden" name="ClientId" value="@ViewBag.ClientId"> -->
            
            <div id="" class="form-group">
                            <label for="UserName">Decription</label>
                            <input type="text" asp-for="Key" class="form-control">
                        <span asp-validation-for="Key" class="text-danger"></span>
                        </div>
                         <div id="" class="form-group">
                            <label for="UserName">Code</label>
                            <input type="text" asp-for="Value" class="form-control">
                         <span asp-validation-for="Value" class="text-danger"></span>
                        </div>

            <div id="" class="row">
                <div class="col-md-6">
                        <a asp-action="Modules" class="btn btn-default" asp-route-clientId="@ViewBag.ClientId">Cancel</a>
                <button type="submit" class="btn btn-primary">Submit</button>
                 
                </div>
                <div class=" col-md-6 form-check pull-right">
                            <label class="form-check-label">
                            <input class="form-check-input" type="checkbox" value="" checked="">
                            Add Another Module after Save?
                            </label>
            </div>

            </div>
            
            </form>
     </div>
 </div>