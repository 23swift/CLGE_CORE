<script type="text/javascript">
    $(function(){ 
         $("#MyPopup").modal("show");
    });
</script>

 <div id="MyPopup" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
         <h3><i class="fas fa-exclamation-triangle fa-2x text-danger"></i> Warning!</h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h5 class="text-danger">Are you sure you want to delete this item?</h5>
      </div>
      <div class="modal-footer">
        <a type="button" class="btn btn-primary" asp-action="ExecuteDeleteUserApplication"  asp-route-Id="@ViewBag.Id" asp-route-selecteditem="@ViewBag.selecteditem">Delete</a>
        <a type="button" class="btn btn-secondary" asp-action="Applications" asp-route-Id="@ViewBag.Id" >Close</a>
      </div>
    </div>
  </div>
</div>