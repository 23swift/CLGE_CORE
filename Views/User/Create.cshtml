@model IdsServer.Models.ApplicationUser

<!-- <h1>Add</h1> -->

@if(ViewBag.message!=null){
    <div class="alert alert-dismissible alert-danger">
        <h4 class="alert-heading">Creating User Failed!</h4>
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Oh snap!</strong> @ViewBag.message
    </div>
    
}


 <form asp-action="Create" method="post">
<div class="card bg-secondary mb-3" >
  <div class="card-header">
      <div id="" class="row">
          <i id="" class="fa fa-user-plus text-primary fa-3x col-md-6"></i> <h4 class="col-md-5" >New User</h4>
      </div>
      
  </div>
  <div class="card-body">
   
  

            <div id="" class="form-group">
                <label for="UserName">User Name</label>
                <input type="text" asp-for="UserName" class="form-control">
            
            </div>

            <div id="" class="form-group"><label for="FirstName">First Name</label>
                <input type="text" class="form-control" asp-for="FirstName">
            </div>

        <div id="" class="form-group"><label for="LastName">Last Name</label>
            <input type="text" class="form-control" asp-for="LastName">
        </div>



  



  </div>
   <div class="card-footer text-muted">
    <div id="" class="row">
        <a asp-action="Index" class="btn btn-default">Cancel</a>
            

            <div class="btn-group" role="group" aria-label="Basic example">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-plus"></i>
                    Add</button>
                <button type="button" class="btn btn-primary">
                    <i class="fa fa-cog"></i>
                    Add & Configure</button>
                
            </div>
</div>

  </div>
</div>
</form>

