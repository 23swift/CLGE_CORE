

@{
    Layout = "";
     ViewData["signed-out"] = true;
}

@model LoggedOutViewModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>IdentityServer4</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="stylesheet" href="~/css/bootstrap.css" />
     <!-- <link rel="stylesheet" href="~/css/materia/bootstrap.css" /> -->
    <link rel="stylesheet" href="~/css/font-awesome.min.css" />
    
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>





 <div class="container-fluid">
        <div class="row">

      
            <div class="col-sm-12 col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <!-- <h1 class="panel-title">Logout</h1> -->
                    </div>
                    <div class="panel-body">
                    <div class="row">
                                <div class="col-sm-12 col-xs-12" >

                                        <div>

                                            <img id="bdoLogoWeFind" alt="BDO" src="/images/bdoLogo.png">&nbsp;
                                        
                                            
                                            <br>
                                            <span  class="pull-right"></span>
                                        </div>
                                        
                                </div>
                    </div>
                                            <h1>
                                                <strong >CLG</strong>
                                                <small >Exchange <span ><strong>1.0.0</strong></span></small>
                                            </h1>
                                <div class="alert alert-warning" >
                                    <!-- <strong >System Description: </strong>
                                    <p>A common request processing System for Consumer loans group.</p> -->

                                    <div class="page-header logged-out">
                                        
                                        <h1>
                                            
                                            <small>You are now logged out</small>
                                        </h1>

                                       

                                        @if (Model.SignOutIframeUrl != null)
                                        {
                                            <iframe width="0" height="0" class="signout" src="@Model.SignOutIframeUrl"></iframe>
                                        }
                                    </div>

                                    @section scripts
                                    {
                                        @if (Model.AutomaticRedirectAfterSignOut)
                                        {
                                            <script src="~/js/signout-redirect.js"></script>
                                        }
                                    }

                                </div>
                                      @if (Model.PostLogoutRedirectUri != null)
                                        {
                                            <div>
                                                Click <a class="PostLogoutRedirectUri" href="@Model.PostLogoutRedirectUri" >  here <i class="fas fa-mouse-pointer"></i></a> to return to the
                                                <strong class="text-primary">@Model.ClientName</strong> application.
                                            </div>
                                        }
                                </div>

                                 <div class="panel-footer">

                                <p >
                                    <small >Only authorized employees may use this system. It is an offense to log on to the system if you are unauthorized or to use it for illicit purposes. Access to this system is being monitored.</small>
                                </p>
                                 
                             </div>
                </div>
            </div>
             

                               

          
     
</div> 

</div>
</body>
</html>